{{!--Row  container to post burgers too--}}
<div class="row" id="mr">
    <div class="col-md-6">
        {{!-- Area for uneaten burger to appear --}}
        <h1>Eat-Da-Burger!</h1>        
        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    <li>
                        {{burger_name}}
                        <button data-id="{{this.id}}" class="eat">Devour it!</button>
                    </li>
                {{/unless}}        
            {{/each}}
        </ul>
    </div>

    <div class="col-md-6">
        {{!-- Area for EATEN burgers to appear --}}
        <h1>Burgers you have eaten:</h1>
        <ul>
            {{#each burgers}}
                {{#if devoured}}
                    <li>
                        {{burger_name}}
                    </li>
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

{{!-- Form to enter your favorite burger--}}
<div class="row">
    <div class="col-4 mx-auto">
        <form class="create-form">
            <div class="form-group">
                <label for="burger_name"></label>
                <input type="text" id="patty" name="burger_name">
            </div>
    
            <button type="submit" class="add">Submit</button>
            <h5>Enter a burger you want to eat Click the "Submit" button.</h5>
        </form>
    </div>
</div>